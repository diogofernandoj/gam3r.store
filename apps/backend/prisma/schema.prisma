generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String
  brand        String
  model        String
  image        String
  rating       Float
  review_video String
  tags         String[]

  base_price        Float
  promotional_price Float
  lower_price       Float
  higher_price      Float
  average_price     Float

  specifications Json

  items OrderItem[]

  @@map("produtos")
}

model Order {
  id             Int      @id @default(autoincrement())
  date           DateTime
  total_amount   Float
  status         String
  payment_method String

  delivery    OrderDelivery @relation(fields: [delivery_id], references: [id])
  delivery_id Int           @unique

  items OrderItem[]
}

model OrderItem {
  id         Int   @id @default(autoincrement())
  quantity   Int
  unit_price Float

  order    Order @relation(fields: [order_id], references: [id])
  order_id Int

  product    Product @relation(fields: [product_id], references: [id])
  product_id Int
}

model OrderDelivery {
  id             Int    @id @default(autoincrement())
  name           String
  email          String
  document       String
  street_address String
  complemento    String
  city           String
  state          String

  order Order?
}
